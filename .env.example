# Copy to .env.local (Next.js) or .env for your environment
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_SENDER=studio@yourdomain.com
APP_URL=http://localhost:3000
ADMIN_SECRET=change_this_to_a_strong_secret

# NextAuth (admin login)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=strong_admin_password

# Cloudflare R2 (presigned uploads)
R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET=your_r2_bucket_name
R2_ENDPOINT=https://<accountid>.r2.cloudflarestorage.com
R2_URL_PREFIX=https://your-cdn-or-r2-host
